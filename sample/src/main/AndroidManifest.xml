<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexvasilkov.gestures.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".SampleApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <activity
            android:name=".base.StartActivity"
            android:theme="@style/AppTheme.Start" />

        <activity-alias
            android:name=".ui.base.MainActivity"
            android:targetActivity=".base.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".demo.DemoActivity"
            android:theme="@style/AppTheme.Full.NoTitle" />

        <activity
            android:name=".ex.ExamplesActivity"
            android:label="@string/examples_title" />

        <activity
            android:name=".ex.image.viewer.ImageViewerActivity"
            android:icon="@drawable/ic_ex_image"
            android:label="Image viewer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.image.control.ImageControlActivity"
            android:icon="@drawable/ic_ex_state_control"
            android:label="Image state control">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.image.crop.ImageCropActivity"
            android:icon="@drawable/ic_ex_crop"
            android:label="Image cropping">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.image.pager.ViewPagerActivity"
            android:icon="@drawable/ic_ex_pager"
            android:label="Images in ViewPager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.image.markers.ImageMarkersActivity"
            android:icon="@drawable/ic_ex_markers"
            android:label="Image markers overlay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.image.animation.ImageAnimationActivity"
            android:icon="@drawable/ic_ex_image_animation"
            android:label="Image animation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.image.animation.cross.ImageCrossAnimationActivity"
            android:icon="@drawable/ic_ex_image_animation"
            android:label="Image animation (cross-activity)">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.image.animation.cross.FullImageActivity"
            android:label="New activity"
            android:theme="@style/AppTheme.Transparent" />

        <activity
            android:name=".ex.image.animation.RoundImageAnimationActivity"
            android:icon="@drawable/ic_ex_image_animation"
            android:label="Circular image animation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.list.recycler.RecyclerToPagerActivity"
            android:icon="@drawable/ic_ex_list"
            android:label="RecyclerView transitions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.list.listview.ListViewToPagerActivity"
            android:icon="@drawable/ic_ex_list"
            android:label="ListView transitions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.list.complex.ComplexListV1Activity"
            android:icon="@drawable/ic_ex_complex_list"
            android:label="Complex list transition v1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.list.complex.ComplexListV2Activity"
            android:icon="@drawable/ic_ex_complex_list"
            android:label="Complex list transition v2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.frame.pager.LayoutsInPagerActivity"
            android:icon="@drawable/ic_ex_pager"
            android:label="Layouts in ViewPager"
            android:theme="@style/AppTheme.FrameLayout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ex.custom.CustomViewActivity"
            android:icon="@drawable/ic_ex_custom_text"
            android:label="Custom gesture view">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

    </application>

</manifest>
